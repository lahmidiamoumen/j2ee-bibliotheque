<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">

    <welcome-file-list>
        <welcome-file>/layout.jsp</welcome-file>
    </welcome-file-list>



    <servlet>
        <servlet-name>ajouterProduit</servlet-name>
        <servlet-class>controller.addProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ajouterProduit</servlet-name>
        <url-pattern>/add-product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/layout.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ajouterProd</servlet-name>
        <jsp-file>/AjouterProduit.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ajouterProd</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>creeConnect</servlet-name>
        <jsp-file>/connect.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>result</servlet-name>
        <servlet-class>controller.getAllProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>connect</servlet-name>
        <servlet-class>controller.Connect</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>creeConnect</servlet-name>
        <url-pattern>/connection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>result</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>connect</servlet-name>
        <url-pattern>/connect</url-pattern>
    </servlet-mapping>


</web-app>
